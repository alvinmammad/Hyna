@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <section class="blog-details-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <!-- Single Blog Post -->
                    <div class="blog-post">
                        <div class="blog-post-single">
                            <figure title="@Model.First().Title">
                                <img src="~/Areas/Admin/Pics/@Model.First().Photo" alt="Blog Post">
                            </figure>
                            <ul class="blog-meta list-style">
                                <li><a href="#"><img src="~/Areas/Admin/Pics/@Model.First().Author.Photo" alt="img">@Model.First().Author.Fullname</a></li>
                                <li><a href="#">@Model.First().Date.ToString("dd MMMM yyyy")</a></li>
                                <li><a href="#"><i class="far fa-comment"></i>12</a></li>
                            </ul>
                            <h3>@Model.First().Title</h3>
                            <p>@Model.First().Text</p>
                        </div>
                        <div class="blog-img-text">
                            <div class="blog-img">
                                <img src="~/Pics/@Model.First().Photo" alt="img">
                            </div>
                            <div class="blog-text">
                                <h4>@Model.First().Title</h4>
                                <p>@Model.First().Description</p>
                            </div>
                        </div>
                        <div class="quote-content">
                            <span class="flaticon-left-quotes-sign"></span>
                            <p>@Model.First().Description</p>
                            <h5>@Model.First().Author.Fullname</h5>
                        </div>
                        <div class="post-bottom-content">
                            <p>@Model.First().Text</p>
                        </div>
                      
                        <div class="tag-share-area">
                            <div class="tag-area">
                                <ul class="tag-list list-style">
                                    @foreach (var category in Model)
                                    {
                                        <li><a href="#">@category.Category.Name</a></li>
                                    }

                                </ul>
                            </div>
                            <div class="share-area">
                                <h5>Share Post</h5>
                                <ul class="social-list list-style">
                                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="#"><i class="fab fa-google-plus-g"></i></a></li>
                                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fab fa-vimeo-v"></i></a></li>
                                </ul>
                            </div>
                        </div>
                       
                        <div class="nextprev-area">
                            <a href="#">Previous</a>
                            <a href="#">Next</a>
                        </div>
                       
                    </div>
                </div>
                <div class="col-md-12 col-lg-4">
                    <div class="aside-area">
                        <div class="blog-search">
                            <!-- Start search option -->
                            <form action="#">
                                <div class="blog-search-option">
                                    <input class="input-search" type="text" placeholder="Search">
                                    <button class="button" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </form>
                            <!-- End search option -->
                        </div>
                        <div class="aside-content aside-service">
                            <h4>All News Post</h4>
                            <ul class="aside-list list-style">
                                @foreach (var blogdetail in Model)
                                {
                                    <li><a href="#">@blogdetail.Category.Name</a></li>
                                }

                                
                            </ul>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </section>
  