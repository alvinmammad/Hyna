<!-- Start Client Logo Area -->
<div class="client-logo-area pt-140">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="client-logo-slider owl-carousel owl-theme">
                    @foreach (var partner in Model.Partners.ToList())
                    {
                        <div class="client-logo-single">
                            <img src="~/Areas/Admin/Pics/@partner.Logo" alt="Logo">
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>
