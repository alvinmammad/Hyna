@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <section class="blog-post-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <!-- Single Blog Post -->
                    @foreach (Blog blog in Model)
                    {
                        <div class="blog-post">
                            <div class="blog-post-single">
                                <figure title="@blog.Title">
                                    <img src="~/Areas/Admin/Pics/@blog.Photo" alt="Blog Post">
                                </figure>
                                <ul class="blog-meta list-style">
                                    <li><a href="#"><img src="~/Content/hyna/img/blog/1.jpg" alt="img">@blog.Author.Fullname</a></li>
                                    <li><a href="#">@blog.Date.ToString("dd MMMM yyyy")</a></li>
                                    <li><a href="#"><i class="far fa-comment"></i>12</a></li>
                                </ul>
                                <h3><a href="#">@blog.Title</a></h3>
                                <p>@blog.Description</p>
                                <a href="@Url.Action("index","blogdetails")">Continue Reading</a>
                            </div>
                        </div>
                    }

                    <!-- Single Blog Post -->

                </div>
                <div class="col-md-12 col-lg-4">
                    <div class="aside-area">
                        <div class="blog-search">
                            <!-- Start search option -->
                            <form action="#">
                                <div class="blog-search-option">
                                    <input class="input-search" type="text" placeholder="Axtar">
                                    <button class="button" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </form>
                            <!-- End search option -->
                        </div>
                        <div class="aside-content aside-service">
                            <h4>All News Post</h4>
                            <ul class="aside-list list-style">
                                @foreach (var category in Model)
                                {
                                    <li><a href="#">@category.Category.Name</a></li>
                                }

                               
                            </ul>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </section>
    